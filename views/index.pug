extends base.pug

block content
	.sticky-top.pt-2(style='background:rgba(255, 255, 255, 0.9)')
		h1= "1. SÃ©lectionnez votre groupe"
		hr
		ul.list-unstyled.lead.pl-2.pr-2
			each calendars_at_letter, letter in calendars
				h2: a.d-block.text-muted.dropdown(href='#letter_'+letter, data-toggle='collapse')= letter
				blockquote.blockquote.ml-2.my-0.collapse.show(id='letter_'+letter)
					each calendar in calendars_at_letter
						li
							a.font-weight-bold(href='/calendar/'+calendar.name+'/customize')= calendar.name
							if calendar.display
									span.font-italic.text-muted= ' ('+calendar.display+')'